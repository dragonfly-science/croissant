<div class="d-flex justify-content-between js-submission-tag" data-st-id="<%= submission_tag.id %>" data-tag-id="<%= submission_tag.tag.id %>">
  <dl>
    <dt>
      <span class="tag-number tag-number--colour-<%= submission_tag.tag.colour_number %>"><%= submission_tag.tag.full_number %></span>
      <%= "⚠️" if submission_tag.dissonant? %>
      <%= submission_tag.tag.full_name %>
    </dt>
    <dd>
      <p class="small">
        Tagged <%= time_ago_in_words(submission_tag.created_at) %> ago
        <% if submission_tag.tagger.present? %>
          by <%= submission_tag.tagger_email %>
        <% end %>
      </p>
      <p>
        <%= submission_tag.text %>
      </p>
    </dd>
  </dl>
  <%= link_to 'x', submission_tag, method: :delete, class: 'text-danger',
  data: { confirm: 'Are you sure you want to delete this tag?' } %>
</div>
