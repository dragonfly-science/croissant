<form method="get" action="goto">
  <div class="input-group">
    <div class="input-group-prepend">
      <a title="Go to first submission" class="btn <%= submission.prev ? "" : "disabled" %>" href="<%= consultation_submission_tag_path(submission.consultation, submission.first) %>">
        <svg id="i-start" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="20" height="20" fill="none" stroke="black" stroke-linecap="round" stroke-linejoin="round" stroke-width="3">
          <path d="M8 2 L8 16 22 2 22 30 8 16 8 30" />
        </svg>
      </a>
      <a title="Go to previous submission" class="btn <%= submission.prev ? "" : "disabled" %>" href="<%= submission.prev ? consultation_submission_tag_path(submission.prev.consultation, submission.prev) : "#" %>">
        <svg id="i-caret-left" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="20" height="20" fill="none" stroke="black" stroke-linecap="round" stroke-linejoin="round" stroke-width="3">
          <path d="M22 30 L6 16 22 2 Z" />
        </svg>
      </a>
      <label class="input-group-text" for="inputSubmissionId">ID</label>
    </div>
    <input name="goto_submission_id" type="number" min="<%= submission.first.id %>" max="<%= submission.last.id %>" value="<%= submission.id %>" class="form-control" id="inputSubmissionId">
    <input name="goto_consultation_id" type="hidden" value="<%= submission.consultation.id %>">
    <div class="input-group-append">
      <a title="Go to next submission" class="btn <%= submission.next ? "" : "disabled" %>" href="<%= submission.next ? consultation_submission_tag_path(submission.next.consultation, submission.next) : "#" %>">
        <svg id="i-caret-right" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="20" height="20" fill="none" stroke="black" stroke-linecap="round" stroke-linejoin="round" stroke-width="3">
          <path d="M10 30 L26 16 10 2 Z" />
        </svg>
      </a>
      <a title="Go to last submission" class="btn <%= submission.next ? "" : "disabled" %>" href="<%= consultation_submission_tag_path(submission.last.consultation, submission.last) %>">
        <svg id="i-end" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="20" height="20" fill="none" stroke="black" stroke-linecap="round" stroke-linejoin="round" stroke-width="3">
          <path d="M24 2 L24 16 10 2 10 30 24 16 24 30" />
        </svg>
      </a>
    </div>
  </div>
</form>
