<button type="button" class="btn btn-outline-secondary btn-sm list-group-item col-sm-3 m-1 text-left font-weight-bold " data-toggle="collapse" href="#tag-group-<%= tag.id %>">
  <%= tag.name %>
  <%= link_to 'x', [tag.taxonomy, tag], method: :delete, data: { confirm: 'Are you sure you want to delete this tag?' } %>
</button>
<% if tag.children.any? %>
  <section id="tag-group-<%= tag.id %>" class="col collapse">
    <% tag.children.each do |tag| %>
      <div class="row align-items-start">
        <%= render partial: tag %>
      </div>
    <% end %>
  </section>
<% end %>
