<h1>Users</h1>
<table class="table">
  <caption>List of users</caption>
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">email</th>
      <th scope="col">role</th>
      <th scope="col">current state</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.state %></td>
        <td><%= link_to "edit", edit_admin_user_path(user), class:"btn btn-primary" %></td>
        <td><%= render "state_actions", user: user %></td>
      </tr>
    <% end%>
  </tbody>
</table>
